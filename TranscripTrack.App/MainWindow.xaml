<Window x:Class="TranscripTrack.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TranscripTrack.UI"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="150" />
        </Grid.RowDefinitions>
        <Button Grid.Row="0"  Name="profileSelectButton" Content="Select A Profile" Height="60" Width="120" ></Button>
        <Button Grid.Row="1" Name="addProfileButton" Content="Add A Profile" Height="60" Width="120" ></Button>
    </Grid>
</Window>
